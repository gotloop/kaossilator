{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@gotloop/kaossillator/*": ["src/*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["**/*.spec.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
